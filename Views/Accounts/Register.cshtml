@model ElearningWebsite.ViewModel.RegisterVM
@{
    ViewData["Title"] = "Register";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register Page - SmartLearn</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Overpass:ital,wght@0,100..900;1,100..900&display=swap"
          rel="stylesheet" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" />
    <link rel="stylesheet" href="~/UserLayout/css/Register.css" />
</head>
<body>
    <div class="login-container">
        <!-- Phần bên trái: Form đăng ký -->
        <div class="login-form">
            <!-- Logo -->
            <div class="logo">
                <i class="fa-solid fa-book-open" style="margin-right: 10px"></i>
                SmartLearn
            </div>

            <!-- Tiêu đề -->
            <h1>REGISTER NOW!</h1>
            <p>Already have an account, <a href="login.html">Sign in</a></p>

            <!-- Form đăng ký -->
            <form asp-controller="Accounts" asp-action="Register" enctype="multipart/form-data">
                <!-- Hàng 1: Full Name và Username -->
                <div class="form-row">
                    <div class="input-group">
                        <label asp-for="@Model.FullName">Full Name</label>
                        <input asp-for="@Model.FullName"
                               type="text"
                               id="full-name"
                               placeholder="Enter your name"
                               required />
                        <span asp-validation-for="@Model.FullName" class="text-danger"></span>
                    </div>
                    <div class="input-group">
                        <label asp-for="@Model.Username">Username</label>
                        <input asp-for="@Model.Username"
                               type="text"
                               id="username"
                               placeholder="Enter your username"
                               required />
                        <span asp-validation-for="@Model.Username" class="text-danger"></span>
                    </div>
                </div>

                <!-- Hàng 2: Email và Phone Number -->
                <div class="form-row">
                    <div class="input-group">
                        <label asp-for="@Model.Email">Email</label>
                        <input asp-for="@Model.Email" type="email"
                               id="email"
                               placeholder="Enter your email"
                               required />
                        <span asp-validation-for="@Model.Email" class="text-danger"></span>
                    </div>
                    <div class="input-group">
                        <label asp-for="@Model.PhoneNumber">Phone Number</label>
                        <input asp-for="@Model.PhoneNumber" type="tel"
                               id="phone"
                               placeholder="Enter your number"
                               required />
                        <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                    </div>
                </div>

                <!-- Hàng 3: Password và Confirm Password -->
                <div class="form-row">
                    <div class="input-group">
                        <label asp-for="@Model.Password">Password</label>
                        <input asp-for="@Model.Password" type="password"
                               id="password"
                               placeholder="Enter your password"
                               required />
                        <span asp-validation-for="@Model.Password" class="text-danger"></span>
                    </div>
                    <div class="input-group">
                        <label asp-for="@Model.ConfirmPassword">Confirm Password</label>
                        <input
                            asp-for="@Model.ConfirmPassword"
                            type="password"
                               id="confirm-password"
                               placeholder="Confirm your password"
                               required />
                        <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <!-- Hàng mới: Date of Birth và Image Upload -->
                <div class="form-row">
                    <div class="input-group">
                        <label asp-for="@Model.DateOfBirth">Date of Birth</label>
                        <input asp-for="@Model.DateOfBirth" type="date"
                               id="dob"
                               required />
                        <span asp-validation-for="@Model.DateOfBirth" class="text-danger"></span>
                    </div>

                    <div class="input-group">
                        <label for="ProfileImg">Profile Image</label>
                        <input type="file" name="ProfileImg"
                               id="profile-image"
                               accept="image/*" />
                    </div>
                </div>
                
   
                <!-- Trường Gender -->
                <div class="input-group">
                    <label>Gender</label>
                    <div class="gender-options">
                        <label>
                            <input asp-for="@Model.Gender" type="radio" value="0" required /> Male
                        </label>
                        <label>
                            <input asp-for="@Model.Gender" type="radio" value="1" required /> Female
                        </label>
                        <span asp-validation-for="@Model.Gender" class="text-danger"></span>
                        </>

                    </div>
                </div>
                <!-- Nút Register -->
                <button type="submit" class="sign-in-btn">Register</button>
            </form>
        </div>

        <!-- Phần bên phải: Hình minh họa -->
        <div class="illustration">
            <!-- Sử dụng cùng hình minh họa như trang đăng nhập -->
            <img src="~/UserLayout/images/Exlorer_Illustration 1.png" alt="Illustration" />
        </div>
    </div>
</body>
</html>